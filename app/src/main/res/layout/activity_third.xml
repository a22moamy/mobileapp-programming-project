<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/AppTheme.AppBarOverlay"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" >


  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="wrap_content"
      android:layout_height="300dp"
      android:orientation="vertical"
      android:padding="10dp"
      app:layout_constraintTop_toBottomOf="@id/appBarLayout"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:gravity="center_horizontal"
      android:layout_margin="20dp">
    <TextView
        android:id="@+id/zodiacTitle"
        android:fontFamily="@font/playfair_display"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:text="Skytten"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="153dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/vagen" />

    <TextView
        android:id="@+id/zodiacDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 februari - 30 october"
        android:fontFamily="@font/ysbaeu_500"
        />

    <TextView
        android:id="@+id/zodiacProcent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,7% av befolkningen"
        android:fontFamily="@font/ysbaeu_500"
        />

    <TextView
        android:id="@+id/zodiacQual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="You're nice sometimes"
        android:fontFamily="@font/ysbaeu_500"
        />

    <TextView
        android:id="@+id/zodiacAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Don't text and drive today."
        android:fontFamily="@font/ysbaeu_500"
        />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>